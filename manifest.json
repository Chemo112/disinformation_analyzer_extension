{
  "manifest_version": 3,
  "name": "Disinformation Analyzer",
  "version": "1.0",
  "description": "Analyze disinformation in text using your AI model.",
  "permissions": ["activeTab", "scripting", "tabs", "storage", "webNavigation"],
  "host_permissions": [
    "https://disinformation-server.onrender.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
